@model Wms.Pages.Registrar.User.AddModel
@{
}

<h2>Add user</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="NewUser.Username" class="form-label"></label>
        <input type="text" class="form-control" asp-for="NewUser.Username" aria-describedby="usernameHelp">
        <div id="usernameHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label asp-for="NewUser.FirstName" class="form-label"></label>
        <input type="text" class="form-control" asp-for="NewUser.FirstName" aria-describedby="firstNameHelp">
        <div id="firstNameHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label asp-for="NewUser.LastName" class="form-label"></label>
        <input type="text" class="form-control" asp-for="NewUser.LastName" aria-describedby="lastNameHelp">
        <div id="lastNameHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
