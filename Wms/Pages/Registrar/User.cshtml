@model Wms.Pages.Registrar.UserModel
@{
    ViewData["Title"] = "User list";
    int lineItemCount = 1;
}

&nbsp;



<table class="table table-striped">
    <thead>
        <tr>
            <th colspan="4">
                <div class="caption">
                    <h3>
                        User list
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="searchRow" aria-expanded="false" aria-controls="searchRow"><span class="bi-search"></span></button>
                    </h3>
                    <span class="records-info">Record 5 / @Model.UserList.Count() (Page 1 of 1)</span>
                </div>
            </th>
        </tr>

        <tr>
            <th scope="col">#</th>
            @*<th scope="col">Username
                <button class="btn btn-link" type="button"><span class="bi-sort-down-alt"></span></button>
                </th>
                <th scope="col">First name
                <button class="btn btn-link" type="button"><span class="bi-sort-down-alt"></span></button>
                </th>
                <th scope="col">Last name
                <button class="btn btn-link" type="button"><span class="bi-sort-down-alt"></span></button>
                </th>*@
            @foreach (var item in Model.PagedData.DataFieldList)
            {
                <th scope="col">
                    
                    @if (item.SortAscending)
                    {
                        <button class="btn btn-link" type="button">
                            @item.Name <span class="bi-sort-down-alt"></span>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-link" type="button">
                            @item.Name <span class="bi-sort-up-alt"></span>
                        </button>
                    }

                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserList)
        {
            <tr>
                <th scope="row">@(lineItemCount++)</th>
                <td>@item.Username</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

<a asp-page="/Registrar/User/Add" class="btn btn-primary">Add user</a>

